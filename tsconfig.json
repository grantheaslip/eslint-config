{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "declarationMap": true,
    "exactOptionalPropertyTypes": true,
    "esModuleInterop": true,
    "incremental": true,
    "jsx": "react",
    "moduleResolution": "Node16",
    "module": "Node16",
    "noImplicitAny": false,
    "outDir": "dist",
    "strict": true,
    "target": "ES2019"
  },
  "include": [
    "**/*.mjs",
    "**/*.js",
    "src/**/*.js"
  ]
}

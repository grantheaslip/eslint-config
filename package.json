{
  "name": "@grantheaslip/eslint-config",
  "version": "0.2.0",
  "description": "ESLint config for personal projects",
  "author": {
    "name": "Grant Heaslip",
    "email": "grant@grantheaslip.ca",
    "url": "https://grantheaslip.ca/"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/grantheaslip/eslint-config.git"
  },
  "type": "module",
  "sideEffects": false,
  "exports": "./index.js",
  "files": [
    "configs/**/*.js",
    "index.js"
  ],
  "scripts": {
    "eslint-check": "eslint . --ext='js,ts,tsx'",
    "eslint-fix": "eslint . --ext='js,ts,tsx' --fix",
    "lint": "run-p -l eslint-check prettier-check tsc-check",
    "prettier-check": "prettier --check .",
    "prettier-write": "prettier --write .",
    "npm-check-updates": "npm-check-updates",
    "tsc-check": "tsc --noEmit"
  },
  "dependencies": {
    "@arthurgeron/eslint-plugin-react-usememo": "^2.4.4",
    "@eslint/compat": "^1.2.7",
    "@eslint/js": "^9.22.0",
    "@next/eslint-plugin-next": "^15.2.2",
    "@rushstack/eslint-patch": "^1.11.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-perfectionist": "^4.10.1",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-security": "^3.0.1",
    "globals": "^16.0.0",
    "typescript-eslint": "^8.26.1"
  },
  "devDependencies": {
    "@types/eslint-plugin-security": "^3.0.0",
    "@types/node": "^22.13.10",
    "eslint": "^9.22.0",
    "npm-check-updates": "^17.1.15",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.3",
    "typescript": "~5.8.2"
  },
  "peerDependencies": {
    "eslint": "^9.22.0"
  }
}
